{
  "name": "OC-UI",
  "version": "1.0.0",
  "description": "UI resources ",
  "scripts": {
    "clean": "rimraf build esdoc",
    "lint-fix": "eslint src --fix",
    "build": "npm run clean && cross-env NODE_ENV=production webpack --config webpack.config.js --progress --colors --bail",
    "grails-plugin-package": "npm run build && gulp grails-plugin-package",
    "grails-plugin-install": "npm run grails-plugin-package && gulp grails-plugin-install",
    "grails-plugin-deploy": "npm run grails-plugin-package && gulp grails-plugin-deploy",
    "grails-plugin-release": "npm run grails-plugin-package -- --release && gulp grails-plugin-deploy --release",
    "start": "npm run run-server",
    "esdoc": "esdoc -c esdoc.json",   
    "run-server": "nodemon --watch src/app src/www/devServer --ignore src/www/tmp --exec babel-node --presets es2015,stage-0 ",
    "watch-less": "nodemon --watch src/www/resources/less/ --ext less --exec npm run build-less"
  },
  "author": {
    "name": "Sergey Tamkov",
    "email": "sergey.tamkov@jcatalog.com"
  },
  "repository": {
    "type": "git",
    "url": "git+"
  },
  "license": "jCatalog",
  "readme": "README.md",
  "dependencies": {
    "chokidar": "1.6.0",
	"cors": "2.8.1",
    "fs-extra": "0.30.0",
	"less": "2.7.1",
    "lodash": "4.11.1"
  },
  "devDependencies": {
    "babel-cli": "6.9.0",
    "babel-core": "6.4.5",
    "babel-preset-es2015": "6.3.13",
    "babel-preset-stage-0": "6.3.13",
    "babelify": "6.1.3",   
    "eslint": "2.13.1",
    "eslint-config-airbnb": "3.1.0",
    "eslint-config-jcatalog": "1.0.2",
    "eslint-plugin-react": "5.2.2",
    "express": "4.13.4",
    "jcatalog-dev-tools": "1.0.0",    
    "nodemon": "1.9.2",
    "request": "2.75.0"
  },
  "engines": {
    "node": "4.3.1",
    "npm": "2.x"
  }
}
